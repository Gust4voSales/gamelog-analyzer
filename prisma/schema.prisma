generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// optional generator to generate erd file
generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.svg"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Match {
  id          String        @id
  startTime   DateTime
  endTime     DateTime
  playerStats PlayerStats[]
}

model PlayerStats {
  id          String @id @default(cuid())
  playerName  String
  matchId     String
  kills       Int
  deaths      Int
  bestStreak  Int
  weaponStats Json // Format: { weaponName: int (killCount) }. Example: { "AK-47": 10, "M4A1-S": 5 }
  Match       Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@unique([matchId, playerName])
}
